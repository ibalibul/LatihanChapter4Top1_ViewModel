<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvJudulBerita"
        android:text="@string/judul_berita"
        android:gravity=""
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvtglBerita"
        android:text="@string/tanggalberita"
        android:textSize="14dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:textColor="@color/merah"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvJudulBerita"/>
    <TextView
        android:id="@+id/tvJurnalisBerita"
        android:text="@string/jurnalis_berita"
        android:textSize="12dp"
        android:layout_below="@id/tvtglBerita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgBerita"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_fiber_new_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>